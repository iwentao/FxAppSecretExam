<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:soundEffectsEnabled="false">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_imgLogo"
                android:layout_width="90.0dip"
                android:layout_height="90.0dip"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:text="@string/app_longname"
                android:textColor="@color/text_color_333333"
                android:textSize="18.0sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginTop="20.0dip" />

        <RelativeLayout
            android:id="@+id/rl_version"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="@drawable/btn_white_press"
            android:gravity="center"
            android:orientation="horizontal"
            android:soundEffectsEnabled="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15.0dip"
                android:gravity="center_vertical"
                android:text="版本号"
                android:textColor="@color/text_color_666666"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2.0dip"
                android:layout_toLeftOf="@id/iv_version"
                android:gravity="center_vertical"
                android:text="1.0.0"
                android:textColor="@color/text_color_999999"
                android:textSize="13.0sp" />

            <ImageView
                android:id="@+id/iv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6.0dip"
                android:src="@drawable/cell_icon_arrow" />
        </RelativeLayout>

        <include layout="@layout/separate_line_layout" />

        <RelativeLayout
            android:id="@+id/rl_open_www"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="@drawable/btn_white_press"
            android:gravity="center"
            android:orientation="horizontal"
            android:soundEffectsEnabled="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15.0dip"
                android:gravity="center_vertical"
                android:text="官方网站"
                android:textColor="@color/text_color_666666"
                android:textSize="15.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2.0dip"
                android:layout_toLeftOf="@id/iv_img_www"
                android:gravity="center_vertical"
                android:text="https://www.xxx.com/"
                android:textColor="@color/text_color_999999"
                android:textSize="13.0sp" />

            <ImageView
                android:id="@+id/iv_img_www"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6.0dip"
                android:src="@drawable/cell_icon_arrow" />
        </RelativeLayout>

        <include layout="@layout/separate_line_layout" />

        <RelativeLayout
            android:id="@+id/rl_copy_mp"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="@drawable/btn_white_press"
            android:gravity="center"
            android:orientation="horizontal"
            android:soundEffectsEnabled="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15.0dip"
                android:gravity="center_vertical"
                android:text="微信公众号"
                android:textColor="@color/text_color_666666"
                android:textSize="15.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2.0dip"
                android:layout_toLeftOf="@id/iv_img_mp"
                android:gravity="center_vertical"
                android:text="xxx"
                android:textColor="@color/text_color_999999"
                android:textSize="13.0sp" />

            <ImageView
                android:id="@+id/iv_img_mp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6.0dip"
                android:src="@drawable/cell_icon_arrow" />
        </RelativeLayout>

        <include layout="@layout/separate_line_layout" />

        <RelativeLayout
            android:id="@+id/rl_kfTel"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="@drawable/btn_white_press"
            android:gravity="center"
            android:orientation="horizontal"
            android:soundEffectsEnabled="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15.0dip"
                android:gravity="center_vertical"
                android:text="客服电话"
                android:textColor="@color/text_color_666666"
                android:textSize="15.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2.0dip"
                android:layout_toLeftOf="@id/iv_imgKfTel"
                android:gravity="center_vertical"
                android:text="xxx"
                android:textColor="@color/text_color_999999"
                android:textSize="13.0sp" />

            <ImageView
                android:id="@+id/iv_imgKfTel"
                android:layout_width="22.0dip"
                android:layout_height="22.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6.0dip"
                android:src="@drawable/ic_right_arrow" />
        </RelativeLayout>

        <include layout="@layout/separate_line_layout" />

        <RelativeLayout
            android:id="@+id/rl_email"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="@drawable/btn_white_press"
            android:gravity="center"
            android:orientation="horizontal"
            android:soundEffectsEnabled="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15.0dip"
                android:gravity="center_vertical"
                android:text="技术支持"
                android:textColor="@color/text_color_666666"
                android:textSize="15.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2.0dip"
                android:layout_toLeftOf="@id/iv_imgEmail"
                android:gravity="center_vertical"
                android:text="xxx@xxx.com"
                android:textColor="@color/text_color_999999"
                android:textSize="13.0sp" />

            <ImageView
                android:id="@+id/iv_imgEmail"
                android:layout_width="22.0dip"
                android:layout_height="22.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6.0dip"
                android:src="@drawable/ic_right_arrow" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>