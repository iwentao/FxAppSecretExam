<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_clickBlank"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/baseBg"
    android:orientation="vertical"
    android:soundEffectsEnabled="false">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff7f7f7"
        android:paddingLeft="20.0dip"
        android:paddingTop="12.0dip"
        android:paddingBottom="10.0dip"
        android:text="您的反馈是我们前进的动力"
        android:textColor="@color/text_color_999999"
        android:textSize="14.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_contentEditText"
            android:layout_width="fill_parent"
            android:layout_height="160.0dip"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="请填写您的问题描述以便我们提供更好的帮助"
            android:maxLength="500"
            android:padding="10.0dip"
            android:paddingLeft="10.0dip"
            android:paddingTop="10.0dip"
            android:paddingRight="10.0dip"
            android:soundEffectsEnabled="false"
            android:textColor="@color/setting_text_color_1a1a1a"
            android:textColorHint="@color/grey_D9D9D9"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/tv_contentCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="21.0dip"
            android:layout_marginRight="15.0dip"
            android:text="0/500"
            android:textSize="12.0sp"
            android:visibility="gone" />
    </LinearLayout>

    <include layout="@layout/separate_block_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="141.0dip"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:text="图片(选填,问题的截图或图片)"
                android:textColor="@color/text_color_999999"
                android:textSize="14.0sp" />

            <View
                android:layout_width="0.0dip"
                android:layout_height="0.0dip"
                android:layout_weight="1.0" />

            <TextView
                android:id="@+id/tv_image_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20.0dip"
                android:text="2/3"
                android:textColor="@color/grey_D9D9D9"
                android:textSize="14.0sp" />
        </LinearLayout>
        <!--
        <androidx.widget.RecyclerView
            android:id="@id/rv_image"
            android:layout_width="fill_parent"
            android:layout_height="77.0dip"
            android:layout_marginTop="19.0dip" />
        -->
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff7f7f7"
        android:paddingLeft="20.0dip"
        android:paddingTop="12.0dip"
        android:paddingBottom="10.0dip"
        android:text="方便我们后期为您解答疑惑"
        android:textColor="@color/text_color_999999"
        android:textSize="14.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_contactEditText"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="手机/邮箱/QQ"
            android:maxLength="100"
            android:paddingLeft="10.0dip"
            android:paddingTop="12.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="12.0dip"
            android:singleLine="true"
            android:soundEffectsEnabled="false"
            android:textColor="@color/setting_text_color_1a1a1a"
            android:textColorHint="@color/grey_D9D9D9"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/tv_contactCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15.0dip"
            android:text="0/100"
            android:textSize="12.0sp"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/rbtv_submit"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_marginLeft="38.0dip"
        android:layout_marginTop="35.0dip"
        android:layout_marginRight="38.0dip"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16.0sp"
        android:background="@color/grey_D9D9D9" />
</LinearLayout>