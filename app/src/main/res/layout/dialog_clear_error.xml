<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corner_10dp"
    android:paddingBottom="25.0dip">

    <TextView
        android:id="@id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="36.0dip"
        android:layout_marginTop="30.0dip"
        android:gravity="top"
        android:text="清空错题本全部错题"
        android:textColor="#ff333333"
        android:textSize="18.0sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/descTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:gravity="top"
        android:text="确定清空吗？"
        android:textColor="#ff333333"
        android:textSize="14.0sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTv" />

    <TextView
        android:id="@id/cancelTv"
        android:layout_width="0.0dip"
        android:layout_height="44.0dip"
        android:layout_marginLeft="18.0dip"
        android:layout_marginTop="30.0dip"
        android:background="@drawable/bg_shape_s1_333333_r100"
        android:gravity="center"
        android:text="取消"
        android:textColor="#ff333333"
        android:textSize="16.0sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/confirmTv"
        app:layout_constraintTop_toBottomOf="@id/descTv" />

    <TextView
        android:id="@id/confirmTv"
        android:layout_width="0.0dip"
        android:layout_height="44.0dip"
        android:layout_marginLeft="14.0dip"
        android:layout_marginRight="18.0dip"
        android:background="@drawable/practice_confirm_btn_bg"
        android:gravity="center"
        android:text="确定"
        android:textColor="#ffffffff"
        android:textSize="16.0sp"
        app:layout_constraintLeft_toRightOf="@id/cancelTv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cancelTv" />
</androidx.constraintlayout.widget.ConstraintLayout>