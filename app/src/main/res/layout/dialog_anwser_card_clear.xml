<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corner_10dp"
    android:paddingBottom="25.0dip">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21.0dip"
        android:text="温馨提示"
        android:textColor="#ff333333"
        android:textSize="18.0sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45.0dip"
        android:layout_marginTop="14.0dip"
        android:layout_marginRight="45.0dip"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:text="您确定要清空当前做题记录并重新开始么？"
        android:textColor="#ff333333"
        android:textSize="16.0sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTv" />

    <TextView
        android:id="@+id/cancelTv"
        android:layout_width="0.0dip"
        android:layout_height="44.0dip"
        android:layout_marginLeft="18.0dip"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/bg_shape_s1_333333_r100"
        android:gravity="center"
        android:text="取消"
        android:textColor="#ff333333"
        android:textSize="16.0sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/confirmTv"
        app:layout_constraintTop_toBottomOf="@id/descTv" />

    <TextView
        android:id="@+id/confirmTv"
        android:layout_width="0.0dip"
        android:layout_height="44.0dip"
        android:layout_marginLeft="14.0dip"
        android:layout_marginRight="18.0dip"
        android:background="@drawable/practice_confirm_btn_bg"
        android:gravity="center"
        android:text="清空"
        android:textColor="#ffffffff"
        android:textSize="16.0sp"
        app:layout_constraintLeft_toRightOf="@id/cancelTv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cancelTv" />

    <ImageView
        android:id="@+id/closeIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15.0dip"
        android:src="@drawable/jiakao__bind_school_dialog_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout >