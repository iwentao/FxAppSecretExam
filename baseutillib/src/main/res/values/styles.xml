<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogFullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--设置Tablayout字体大小-->
    <style name="TabLayoutTextSelect">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/tab_text_sel_color</item>
    </style>

    <style name="TabLayoutText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/tab_text_color</item>
    </style>

    <style name="DividerLine" parent="@android:style/Theme.Light">
        <item name="android:background">@color/default_divider_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2.0px</item>
    </style>

</resources>